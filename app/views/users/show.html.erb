<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.simulations.any? %>
      <h3>Simulations (<%= @user.simulations.count %>)</h3>
      <ol class="simulations">
        <%= render @simulations %>
      </ol>
      <%= will_paginate @simulations %>
    <% end %>
  </div>
</div>
